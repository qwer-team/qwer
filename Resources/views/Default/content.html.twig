{% extends 'MainSiteBundle::layout.html.twig' %}
{% block menu %}
    {{parent()}}
{% endblock %}
{% block body %}
<div class="primary_content_wrap">
    <div class="container_12 clearfix">
        <div class="grid_12">
            <div class="indent">
                <div id="content" class="grid_9 alpha">
                    <div id="post-60" class="post-60 extra type-extra status-publish hentry post">
                        <article class="post-holder single-post">                   
                            <header>
                                <h1> {{ entity.title }}</h1>
                            </header>
                            <div class="post-content">
                                {% autoescape false %}
                                    {{ entity.content }}
                                {% endautoescape %}
                            </div>  
                        </article>
                        <div id="post-author">
                            <h3>Written by admin</h3>
                                <p class="gravatar"><img width="80" height="80" class="avatar avatar-80 photo" src="bundles/mainsite/image/logo01.png" alt=""></p>

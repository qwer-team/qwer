{% extends 'MainSiteBundle::layout.html.twig' %}
{% block menu %}
    {{parent()}}
{% endblock %}
{% block body %}
<div class="primary_content_wrap">
    <div class="container_12 clearfix">
        <div class="grid_12">
            <div class="indent">
                <div class="header-title">
                    <h1>Portfolio</h1>
                </div>   

    <div id="gallery" class="four_columns">
        <ul class="portfolio">
            {% for entity in entities %}
            <li class="">
                <span class="image-border">
                    <a class="image-wrap" href="http://livedemo00.template-help.com/wordpress_37934/wp-content/themes/theme1466/images/service/service-1.jpg" rel="prettyPhoto[gallery]" title="Morbi ornare egestas urna">
                        <img width="200" height="120" src="/images/icons/{{ asset(entity.icon) }}" class="attachment-portfolio-post-thumbnail-small wp-post-image" alt="service-1" title="service-1" />
                        <span class="zoom-icon"></span>
                    </a>
                </span>
                <div class="folio-desc">
                    <h6>
                        <a href="http://livedemo00.template-help.com/wordpress_37934/services-view/morbi-ornare-egestas-urna/">
                            {{ entity.title }}
                        </a>
                    </h6>
                <p> {{ entity.description|slice(1, 50) }}... </p>
                <a href="/{{ locale }}/{{ entity.translit }}" class="button">
                    Далее...
                </a>
                </div>
            </li>
            {% endfor %}
        </ul>
   </div>

</div></div></div></div>
{% endblock %}      

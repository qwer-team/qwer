{% extends 'MainSiteBundle::layout.html.twig' %}

{% block body %}

<div class="primary_content_wrap">
    <div class="container_12 clearfix">
        <div class="grid_12">
            <div class="indent">

                <div id="content" class="grid_9 alpha">

                    <div id="post-60" class="post-60 extra type-extra status-publish hentry post">

                        {% for onenews in news %}

                            <article id="post-42" class="post-42 post type-post status-publish format-standard hentry category-in-sagittis-mi-rhoncus category-sed-tincidunt-mauris tag-at tag-curabitur tag-euismod tag-odio tag-sem tag-sit tag-tristique tag-ut tag-vel post-holder cat-5-id cat-1-id">
                                <div class="post-container">
                                    {% set onenewsT = onenews.translate( locale ) %}
                                    {% set title = onenewsT.getTitle() %}
                                    {% set link  = onenewsT.getTranslit() %}

                                    <h2>
                                        <a href="{{ link }}" title="{{ title }}" rel="bookmark">
                                            {{ title }}
                                        </a>
                                    </h2>

                                    <div class="post-meta">
                                        <div class="fleft">
                                            {% if entity.datecreate %}
                                                {% set date = entity.datecreate|date('F d, Y H:i a') %}
                                            {% endif %}
                                            <time datetime="2012-02-08T08:12">{{ date }}</time> , by 
                                                <a href="" title="Posts by admin" rel="author">Admin</a>

                                        </div>
                                        <div class="fright">
                                        </div>
                                    </div><!--.post-meta-->

                                    <div class="post-block">
                                        <figure class="featured-thumbnail">
                                            <span class="img-wrap">
                                                <a href="{{ link }}">
                                                    <img width="210" height="169" src="http://livedemo00.template-help.com/wordpress_37934/wp-content/uploads/2012/02/picture-1-210x169.jpg" class="attachment-post-thumbnail wp-post-image" alt="picture-1" title="picture-1" />
                                                </a>
                                            </span>
                                        </figure> 
                                        {{ onenewsT.getContent() |slice( 0, 600 )| raw }}...
                                        <a href="{{ link }}">Read More</a>
                                        
                                    </div>

                                    

                                </div>
                            </article>

                        {% endfor %}



{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block body %}
    <h1 class='menu_sys_h1' style="margin-left:25%;">Список Единиц измерения</h1>
<br class = 'clr'/>

<div class = 'menu_sys_main_conteiner' style="margin-left:25%; width:50%;">
           
{% block navigator %}    
    {% include 'ItcAdminBundle::addnew.html.twig' with {'route': 'units', 'parent_id': NULL} %}
{% endblock %}    
    
<table class="records_list">
    <thead>
        <tr>
            <th class = 'w50px'>{{ "id"|trans }}</th>
            <th>{{ "title"|trans }}</th>
            <th class = 'w150px'>{{ "actions"|trans }}</th>
        </tr>
    </thead>

    <tbody>

    {% for entity in entities %}

        <tr>
            <td class = 'right'>{{ entity.id }}</td>
            <td>{#{{ entity.translate(locale).getTitle() }}#}{{ entity.title}}</td>
            <td class = ''>
                <a class = 'menu_sys_edit new_window' target= '_blank' href="{{ path('units_edit', { 'id': entity.id }) }}">{{ "edit"|trans }}</a>
                <a class = 'menu_sys_delete submit_form' href="#units_delete_{{entity.id}}">{{ "delete"|trans }}</a>              
                
                <form id="units_delete_{{entity.id}}" style = 'display:inline-block' action="{{ path('units_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget( delete_form[entity.id] ) }}
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    
<br class = 'clr'/>    
       
</div>
{% endblock %}

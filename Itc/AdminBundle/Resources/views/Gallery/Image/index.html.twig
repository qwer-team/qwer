<div class = 'menu_sys_main_conteiner'>

<h1>{% trans from "image" %}image list{% endtrans %}</h1>

<table class="records_list image_table">
    <thead>
        <tr>
            <th>{{ "id"|trans }}</th>
            <th>{{ "src"|trans({}, "image") }}</th>
            <th class="w100px">{{ "Image"|trans }}</th>
            <th>{{ "title"|trans }}</th>
            <th class="w150px">{{ "actions"|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr id="tr_image_{{entity.id}}">
            <td>
                <a href="{{ path('image_edit', { 'id': entity.id }) }}" target="_blank" class="new_window">{{entity.id}}</a>
            </td>
            <td>{{ entity.src }}</td>
            <td><img  src = '{{ vich_uploader_asset(entity, 'smallImage') }}' ></td>
            <td>{{ entity.tag }}</td>
            <td>
                <div class="link_block">
                    <a class = 'menu_sys_delete delete_object'
                   data-link="#tr_image_{{entity.id}}" data-form="#image_delete_{{entity.id}}">
                    {{ "delete"|trans }}</a>              
                    <form id="image_delete_{{entity.id}}" action="{{ path('image_delete', { 'id': entity.id }) }}" method="post">
                        {{ form_widget(delete_form[entity.id]) }}
                    </form>                        
                </div>
                <div class="link_block">
                    <a href="{{ path('image_edit', { 'id': entity.id }) }}" 
                       target="_blank" class="menu_sys_edit new_window">
                       {{ "edit"|trans }}
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="#new_image_{{ gallery_id }}" class="show_object addbutton">
            alt="{% trans from "image" %}Create a new image{% endtrans %}" >
        </a>
    </li>
</ul>
<div id="new_image_{{ gallery_id }}" class="hidden">
    {% render "ItcAdminBundle:Gallery/Image:new" with {'gallery_id': gallery_id} %}
</div>

</div>